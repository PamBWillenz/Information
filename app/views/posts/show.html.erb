<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <div class="card">
    <div class="handle"><h1><%= @post.title %></h1></div>
    <br/><br/>
    <h2><%= @post.message %></h2>
  </div>
</div>

<br class="clear-fix" />

<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <div class="card">
    <div class="comments">
      <div class="handle"><h2>Comments</h2></div>
      
      <%= simple_form_for Comment.new, url: post_comments_path(@post) do |f| %>
        <%= f.input :message %>
        <%= f.submit 'Add Comment', class: 'my-btn' %>
      <% end %>
    </div>
  </div>
</div>
